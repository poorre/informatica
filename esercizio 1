<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>quadrati n casuali </title>
    <style>
        .square {
            width: 50px;
            height: 50px;
            margin: 5px;
            display: inline-block;
            text-align: center;
            line-height: 50px;
            border: 1px solid black;
        }
       
       
    </style>
</head>
<body>
    <input type="number" id="numberInput" placeholder="Enter a number">
    <button onclick="createSquares()">Crea Quadrati</button>
    <div id="container"></div>


    <script>
        function createSquares() {
            const n = document.getElementById('numberInput').value;
            const container = document.getElementById('container');
            container.innerHTML = ''; // Clear previous squares


            for (let i = 0; i < n; i++) {
                const square = document.createElement('div');
                square.className = 'square';
                const randomNum = Math.floor(Math.random() * 101) + 100;
                square.textContent = randomNum;


                if (randomNum % 10 === 0) {
                    square.classList.add('blue');
                }


                container.appendChild(square);
            }
        }
    </script>
</body>
</html>
